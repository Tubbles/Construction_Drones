    "version": "0.2.0",
    "configurations": [
        {
            "type": "factoriomod",
            "request": "launch",
            "name": "Factorio Mod Debug",
            "factorioPath": "${env:HOME}/.steam/steam/steamapps/common/Factorio/bin/x64/factorio"
        },
        {
            "type": "factoriomod",
            "request": "launch",
            "name": "Factorio Mod Debug (Settings & Data)",
            "factorioPath": "${env:HOME}/.steam/steam/steamapps/common/Factorio/bin/x64/factorio",
            "hookSettings": true,
            "hookData": true
        },
        {
            "type": "factoriomod",
            "request": "launch",
            "name": "Factorio Mod Debug (Profile)",
            "factorioPath": "${env:HOME}/.steam/steam/steamapps/common/Factorio/bin/x64/factorio",
            "hookMode": "profile"
        }
    ]
